---
import Base from "@layouts/Base.astro";
import HevyWorkoutCard from '@components/HevyWorkoutCard.astro';
import type { Workout } from '@services/hevyService';
import { fetchHevyData } from '@services/hevyService';

const hevyWorkout: Workout = await fetchHevyData();
---

<Base title="Hevy Workout Test Page">
  <main class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Hevy Workouts</h1>

    <section class="my-8">
      <HevyWorkoutCard workout={hevyWorkout} />
    </section>

  </main>
</Base>
