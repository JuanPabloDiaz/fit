---
import {
  SITE_AUTHOR,
  SITE_PORTFOLIO,
  SITE_GITHUB,
  SITE_LINKEDIN,
} from "@src/consts";
---

<footer class="mt-8 border-t border-green-500/30">
  <div class="px-4 py-6">
    <!-- Main footer content -->
    <div
      class="bg-black/60 backdrop-blur-sm border border-green-500/30 rounded-lg p-4 md:p-6 shadow-xl shadow-green-500/10"
    >
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-6">
        <!-- Creator info -->
        <div class="space-y-3">
          <div
            class="text-green-400 text-xs font-bold tracking-wider font-mono"
          >
            [CREATOR_PROFILE]
          </div>
          <div class="text-green-300">
            <div class="grid grid-cols-3 gap-2">
              <a
                href={SITE_PORTFOLIO}
                target="_blank"
                rel="noopener noreferrer"
                class="footer-link group text-center py-2 px-3 bg-black/40 border border-green-500/20 rounded hover:border-green-400/60 hover:bg-green-500/10 transition-all duration-300"
              >
                <div
                  class="text-green-400 hover:text-green-300 text-xs font-mono"
                >
                  Portfolio
                </div>
              </a>
              <a
                href={SITE_LINKEDIN}
                target="_blank"
                rel="noopener noreferrer"
                class="footer-link group text-center py-2 px-3 bg-black/40 border border-green-500/20 rounded hover:border-green-400/60 hover:bg-green-500/10 transition-all duration-300"
              >
                <div
                  class="text-green-400 hover:text-green-300 text-xs font-mono"
                >
                  LinkedIn
                </div>
              </a>
              <a
                href={SITE_GITHUB}
                target="_blank"
                rel="noopener noreferrer"
                class="footer-link group text-center py-2 px-3 bg-black/40 border border-green-500/20 rounded hover:border-green-400/60 hover:bg-green-500/10 transition-all duration-300"
              >
                <div
                  class="text-green-400 hover:text-green-300 text-xs font-mono"
                >
                  GitHub
                </div>
              </a>
            </div>
          </div>
        </div>

        <!-- Tech info -->
        <div class="space-y-3">
          <div
            class="text-green-400 text-xs font-bold tracking-wider font-mono"
          >
            [TECH_STACK]
          </div>
          <div class="text-green-300 text-xs space-y-2 font-mono">
            <div class="flex items-center space-x-2">
              <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse">
              </div>
              <span>ASTRO.JS • TYPESCRIPT</span>
            </div>
            <div class="flex items-center space-x-2">
              <div
                class="w-2 h-2 bg-green-500 rounded-full animate-pulse animation-delay-300"
              >
              </div>
              <span>TAILWIND CSS • GitHub Actions</span>
            </div>
            <div class="flex items-center space-x-2">
              <div
                class="w-2 h-2 bg-green-500 rounded-full animate-pulse animation-delay-300"
              >
              </div>
              <span>STRAVA API • HEVY API</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Bottom section with copyright and system stats -->
      <div class="mt-6 pt-4 border-t border-green-500/20">
        <div
          class="flex flex-col lg:flex-row justify-between items-start lg:items-center space-y-3 lg:space-y-0"
        >
          <!-- Copyright -->
          <div class="text-green-400/60 text-xs font-mono">
            © {new Date().getFullYear()}
            {SITE_AUTHOR} • All rights reserved
          </div>

          <!-- System stats replacing timestamp -->
          <div
            class="flex flex-col sm:flex-row gap-2 sm:gap-4 text-xs font-mono"
          >
            <div class="flex items-center space-x-2">
              <div class="w-1 h-1 bg-green-500 rounded-full animate-pulse">
              </div>
              <span class="text-green-400/60"
                >CPU: <span class="text-green-400">98.7%</span></span
              >
            </div>
            <div class="flex items-center space-x-2">
              <div
                class="w-1 h-1 bg-green-500 rounded-full animate-pulse animation-delay-500"
              >
              </div>
              <span class="text-green-400/60"
                >MEM: <span class="text-green-600">64.2%</span></span
              >
            </div>
            <div class="flex items-center space-x-2">
              <div
                class="w-1 h-1 bg-green-500 rounded-full animate-pulse animation-delay-1000"
              >
              </div>
              <span class="text-green-400/60"
                >NET: <span class="text-green-400">↑↓ ACTIVE</span></span
              >
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Subtle glitch effect overlay -->
    <div class="absolute inset-0 pointer-events-none opacity-30">
      <div class="footer-glitch"></div>
    </div>
  </div>
</footer>

<style>
  /* Animation delays for staggered effects */
  .animation-delay-300 {
    animation-delay: 0.3s;
  }

  .animation-delay-500 {
    animation-delay: 0.5s;
  }

  .animation-delay-1000 {
    animation-delay: 1s;
  }

  /* Footer link hover effects */
  .footer-link {
    position: relative;
    overflow: hidden;
  }

  .footer-link::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      45deg,
      transparent,
      rgba(0, 255, 0, 0.1),
      transparent
    );
    transform: translateX(-100%);
    transition: transform 0.6s ease;
  }

  .footer-link:hover::before {
    transform: translateX(100%);
  }

  /* Glitch effect */
  .footer-glitch {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(0, 255, 0, 0.02) 50%,
      transparent 100%
    );
    animation: glitchSweep 12s ease-in-out infinite;
    opacity: 0;
  }

  @keyframes glitchSweep {
    0%,
    90%,
    100% {
      opacity: 0;
      transform: translateX(-100%);
    }
    5%,
    85% {
      opacity: 1;
      transform: translateX(100%);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .footer-link {
      padding: 0.375rem 0.5rem;
    }

    .footer-link div {
      font-size: 0.7rem;
    }
  }
</style>
